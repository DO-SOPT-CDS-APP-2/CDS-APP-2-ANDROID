<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CDS29cm" parent="Theme.Material3.Light.NoActionBar">

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>

        <!-- Remove font padding. -->
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="Theme.CDS29cm" parent="Base.Theme.CDS29cm" />

    <!-- white status bar color -->
    <style name="AppTheme.LightStatusBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!-- black status bar color -->
    <style name="AppTheme.DarkStatusBar" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/grayscale_black</item>
    </style>
</resources>