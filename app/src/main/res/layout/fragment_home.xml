<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/half_transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_top_app_bar"
        app:logo="@drawable/img_logo">
    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:id="@+id/chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/half_transparent"
        app:layout_constraintTop_toBottomOf="@id/top_app_bar"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipCornerRadius="16dp"
            android:layout_marginStart="10dp"
            app:chipBackgroundColor="@color/half_transparent"
            app:chipStrokeColor="@color/white"
            android:textColor="@color/white"
            android:text="우먼" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipCornerRadius="16dp"
            android:layout_marginStart="10dp"
            app:chipBackgroundColor="@color/half_transparent"
            app:chipStrokeColor="@color/white"
            android:textColor="@color/white"
            android:text="맨"/>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipCornerRadius="16dp"
            android:layout_marginStart="10dp"
            app:chipBackgroundColor="@color/half_transparent"
            app:chipStrokeColor="@color/white"
            android:textColor="@color/white"
            android:text="라이프"/>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipCornerRadius="16dp"
            android:layout_marginStart="10dp"
            app:chipBackgroundColor="@color/half_transparent"
            app:chipStrokeColor="@color/white"
            android:textColor="@color/white"
            android:text="베스트"/>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipCornerRadius="16dp"
            android:layout_marginStart="10dp"
            app:chipBackgroundColor="@color/half_transparent"
            app:chipStrokeColor="@color/white"
            android:textColor="@color/white"
            android:text="추천"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/chip_group"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_home_66">

            <ImageView
                android:layout_width="346dp"
                android:layout_height="457dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_home_37"
                android:layout_marginTop="20dp"
                android:clipToOutline="true"
                android:background="@drawable/shape_white_fill_15_rect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
