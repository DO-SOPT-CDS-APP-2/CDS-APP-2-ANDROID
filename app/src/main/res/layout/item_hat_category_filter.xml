<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_hat_category_filter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:background="@drawable/shape_gray_line_15_rect"
    android:paddingVertical="6dp"
    android:paddingEnd="12dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tv_hat_category_vertical_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="추천순"
        android:textAppearance="@style/TextAppearance.Kor.Medium"
        android:textColor="@color/grayscale_dark_gray"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/layout_hat_category_filter"
        app:layout_constraintTop_toTopOf="@id/layout_hat_category_filter" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_detail_down_gray_10dp"
        app:layout_constraintStart_toEndOf="@id/tv_hat_category_vertical_filter"
        app:layout_constraintTop_toTopOf="@id/layout_hat_category_filter" />

</androidx.constraintlayout.widget.ConstraintLayout>