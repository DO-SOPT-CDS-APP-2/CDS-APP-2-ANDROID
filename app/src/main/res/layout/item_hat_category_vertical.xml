<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_category_vertical_right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/iv_hat_category_vertical_item_image"
        android:layout_width="180dp"
        android:layout_height="179dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_hatcategory_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hat_category_vertical_item_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:text="타입서비스"
        android:textAppearance="@style/TextAppearance.Kor.Bold"
        android:textSize="11sp"

        app:layout_constraintStart_toStartOf="@id/iv_hat_category_vertical_item_image"
        app:layout_constraintTop_toBottomOf="@id/iv_hat_category_vertical_item_image" />

    <ImageView
        android:id="@+id/iv_hat_category_vertical_item_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="11dp"
        android:src="@drawable/ic_like_off"
        app:layout_constraintEnd_toEndOf="@id/layout_category_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/iv_hat_category_vertical_item_image" />

    <TextView
        android:id="@+id/tv_hat_category_vertical_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="23dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Typerserive~~~상품명"
        android:textAppearance="@style/TextAppearance.Eng.Medium"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/layout_category_vertical_right"
        app:layout_constraintStart_toStartOf="@id/layout_category_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/tv_hat_category_vertical_item_brand" />


    <TextView
        android:id="@+id/tv_hat_category_vertical_item_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:paddingEnd="2dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.Eng.Bold"
        android:textColor="@color/point"
        android:textSize="12sp"

        app:layout_constraintStart_toStartOf="@id/layout_category_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/tv_hat_category_vertical_item_name" />

    <TextView
        android:id="@+id/tv_hat_category_vertical_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="37,050"
        android:textAppearance="@style/TextAppearance.Eng.Bold"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tv_hat_category_vertical_item_discount"
        app:layout_constraintTop_toBottomOf="@id/tv_hat_category_vertical_item_name" />

    <LinearLayout
        android:id="@+id/layout_hat_category_item_shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/shape_gray_fill_2_rect"
        android:paddingHorizontal="3dp"
        android:paddingVertical="2dp"
        app:layout_constraintCircleRadius="2dp"
        app:layout_constraintStart_toStartOf="@id/layout_category_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/tv_hat_category_vertical_item_discount">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무료배송"
            android:textAppearance="@style/TextAppearance.Kor.Regular"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/layout_category_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/layout_hat_category_item_shipping">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="-1dp"
            android:src="@drawable/ic_heart" />

        <TextView
            android:id="@+id/tv_hat_category_vertical_item_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Eng.Medium"
            android:textColor="@color/grayscale_medium_gray"
            android:textSize="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="-1dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_star_gray" />

        <TextView
            android:id="@+id/tv_hat_category_vertical_item_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Eng.Medium"
            android:textColor="@color/grayscale_medium_gray"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_hat_category_vertical_item_mark_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Eng.Medium"
            android:textColor="@color/grayscale_medium_gray"
            android:textSize="8sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
